<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#000000">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:src="@drawable/previousarrow"
                    android:layout_width="50dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/imgBack"
                    android:scaleType="centerInside" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:src="@drawable/icon"
                    android:layout_width="215dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/imglogo" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:minWidth="25px"
        android:minHeight="25px"
        android:fillViewport="true">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:stretchColumns="1">
            <TextView
                android:id="@+id/txtHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:fontFamily="Arial"
                android:gravity="center" />
            <TextView
                android:text="Select Airline"
                android:id="@+id/spiAir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"
                android:fontFamily="Arial"
                android:background="@drawable/spinner_bg" />
            <TextView
                android:text="Select Base"
                android:id="@+id/spiBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"
                android:fontFamily="Arial"
                android:background="@drawable/spinner_bg" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"
                android:id="@+id/txtFirstName"
                android:textColorHint="#000000"
                android:textSize="14dp"
                android:fontFamily="Arial"
                android:textCursorDrawable="@drawable/colorcursor"
                android:background="@drawable/edittext_bottom_line"
                android:hint="First Name" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"
                android:id="@+id/txtLastName"
                android:textColorHint="#000000"
                android:textSize="14dp"
                android:fontFamily="Arial"
                android:textCursorDrawable="@drawable/colorcursor"
                android:background="@drawable/edittext_bottom_line"
                android:hint="Last Name" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"
                android:id="@+id/txtUsername"
                android:textColorHint="#000000"
                android:textSize="14dp"
                android:fontFamily="Arial"
                android:textCursorDrawable="@drawable/colorcursor"
                android:background="@drawable/edittext_bottom_line"
                android:hint="User Name" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"
                android:id="@+id/txtPassword"
                android:textColorHint="#000000"
                android:textSize="14dp"
                android:password="true"
                android:fontFamily="Arial"
                android:textCursorDrawable="@drawable/colorcursor"
                android:background="@drawable/edittext_bottom_line"
                android:hint="Password" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"
                android:id="@+id/txtVerifyPassword"
                android:textColorHint="#000000"
                android:textSize="14dp"
                android:password="true"
                android:fontFamily="Arial"
                android:textCursorDrawable="@drawable/colorcursor"
                android:background="@drawable/edittext_bottom_line"
                android:hint="Verify Password" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"
                android:id="@+id/txtMobile"
                android:textColorHint="#000000"
                android:textSize="14dp"
                android:inputType="phone"
                android:lines="1"
                android:maxLength="13"
                android:fontFamily="Arial"
                android:textCursorDrawable="@drawable/colorcursor"
                android:background="@drawable/edittext_bottom_line"
                android:hint="Phone Number" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"
                android:id="@+id/txtEmail"
                android:textColorHint="#000000"
                android:textSize="14dp"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:fontFamily="Arial"
                android:textCursorDrawable="@drawable/colorcursor"
                android:background="@drawable/edittext_bottom_line"
                android:hint="Email" />
            <TextView
                android:text="Your Subscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="22dp"
                android:fontFamily="Arial"
                android:id="@+id/txtyors" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/Layout1">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:text="Monthly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="right"
                        android:fontFamily="Arial"
                        android:textColor="#000000"
                        android:textSize="16dp" />
                    <TextView
                        android:text="Yearly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="right"
                        android:textColor="#000000"
                        android:fontFamily="Arial"
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:text="$3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#000000"
                        android:fontFamily="Arial"
                        android:gravity="right"
                        android:textSize="16dp" />
                    <TextView
                        android:text="$20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:gravity="right"
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:fontFamily="Arial"
                    android:layout_weight="1">
                    <RadioGroup
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:id="@+id/radioPayment"
                        android:gravity="left"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/radio5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left" />
                        <RadioButton
                            android:id="@+id/radio50"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/chkTandC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="Arial"
                        android:textColor="#000000"
                        android:textSize="14dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/txtTandC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="Arial"
                        android:text="I agree with Terms and Conditions"
                        android:textColor="#000000"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:text="Sign up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="Arial"
                android:background="@drawable/btnsignin"
                android:onClick="buyClick"
                android:id="@+id/btnRsignup" />
            <TextView
                android:id="@+id/Subscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"
                android:fontFamily="Arial"
                android:textSize="16dp" />
        </TableLayout>
    </ScrollView>
</LinearLayout>